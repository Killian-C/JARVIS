{% extends 'base.html.twig' %}

{% block title %}Liste de courses{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('listItemsIsCheckedAjax') }}
{% endblock %}

{% block body %}
    <div class="d-flex align-items-center justify-content-center my-4">
        <h4 class="text-center">Liste de course</h4>

        <form action="{{ path('shopping_list_edit', {'id': shopping_list.id}) }}" method="post" class="ml-3">
            <button class="btn btn-secondary">📝</button>
        </form>

    </div>

    <div class="d-flex align-items-center justify-content-center my-4">

        {% block sort_btn %}
            <form action="{{ path('shopping_list_sort_list_items', {'id': shopping_list.id}) }}" method="post" class="ml-3">
                <button class="btn btn-light btn-outline-primary text-primary"><i class="fas fa-tasks mr-2"></i> Trier par lieux</button>
            </form>
        {% endblock %}

        {% block delete_checked_ones_btn %}
            <form action="{{ path('shopping_list_delete_checked_list_item', {'id': shopping_list.id}) }}" method="post" class="ml-3">
                <button class="btn btn-primary">♻ Suppr cochés</button>
            </form>
        {% endblock %}

        {% block delete_all_btn %}
            <form action="{{ path('shopping_list_clean_shopping_list', {'id': shopping_list.id}) }}" method="post" class="ml-3">
                <button class="btn btn-primary">🗑 Suppr tout</button>
            </form>
        {% endblock %}

    </div>

    {% block post_it %}
        {% include 'shopping_list/components/_list_items_post_it.html.twig' with { 'list_items': shopping_list.listItems } %}
    {% endblock %}

{% endblock %}
