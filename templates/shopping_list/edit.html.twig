{% extends 'base.html.twig' %}

{% block title %}Liste de courses - Mise à jour{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('listItemEmbedForm') }}
{% endblock %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <h4 class="text-center my-4">Liste de course</h4>
    <div class="shopping-list container p-3 alert alert-warning w-75 d-flex justify-content-around align-items-center text-center">
        {{ form_start(form) }}
        <ul class="p-0" id="list-items-container" data-prototype="{{ form_widget(form.listItems.vars.prototype)|e('html_attr') }}" >
            {% for listItem in form.listItems %}
                <li class="d-flex justify-content-around align-items-center">
                    {{ form_row(listItem.checked) }}
                    {{ form_row(listItem.content) }}
                    {{ form_row(listItem.quantity) }}
                </li>
            {% endfor %}
        </ul>
        <button id="add-list-item" type="button" class="add_item_link btn btn-secondary" data-collection-holder-class="listItems">
            Ajouter
        </button>
        <div class="text-center mt-2"><input class="btn btn-primary" type="submit" value="Mettre à jour"></div>
        {{ form_end(form) }}
    </div>
{% endblock %}
