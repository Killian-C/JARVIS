{% extends 'base.html.twig' %}

{% block title %}Ajouter un aliment{% endblock %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
    <a class="p-3" href="{{ path('aliment_index') }}">Retour Ã  la liste des aliments</a>
    <h3 class="text-center my-4">
        {% block title_form %}Ajouter un nouvel aliment{% endblock %}
    </h3>
    <div class="container">
        {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.category) }}
