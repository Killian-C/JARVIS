{% extends 'base.html.twig' %}

{% block title %}Liste des recettes{% endblock %}

{% block body %}
    <h4 class="text-center py-2">Liste des recettes</h4>
    <div class="text-center">
        <a class="my-3 btn btn-primary" href="{{ path('recipe_new') }}">Rédiger une nouvelle recette</a>
        <a class="my-3 btn btn-primary" href="{{ path('recipetype_index') }}">Gérer les types de recette</a>
        <a class="my-3 btn btn-primary" href="{{ path('season_index') }}">Gérer les saisons</a>
    </div>
    <div class="container">
        <div class="row justify-content-center">
            {% for recipe in recipes %}
                <a class="col-11 col-sm-4 recipe-box alert alert-primary mx-2 d-flex align-items-center justify-content-between" href="{{ path('recipe_show', {'id': recipe.id}) }}">
                    <div>
                        <i class="fas fa-utensils mr-2"></i>
                        {{ recipe.title }}
                    </div>
                    <div class="d-flex align-items-center">
                        <form action="{{ path('recipe_edit', {'id': recipe.id}) }}" method="post" class="ml-3">
                            <button class="btn btn-secondary">📝</button>
                        </form>
                        <form action="{{ path('recipe_delete', {'id': recipe.id}) }}" method="post" class="ml-3">
                            <button class="btn btn-secondary">🗑</button>
                        </form>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}
