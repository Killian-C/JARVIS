{% extends 'base.html.twig' %}

{% block title %}Liste des types de recette{% endblock %}

{% block body %}
    <h3 class="text-center my-4">Liste des types de recette</h3>
    <div class="text-center">
        <a class="btn btn-primary my-4" href="{{ path('shopplace_new') }}">Ajouter un nouveau type de recette</a>
    </div>
    <div class="container m-0 p-0 mx-auto">
        <div class="row m-0 p-0 justify-content-center text-center">
            {% for recipetype in recipetypes %}
                <div class="col-12 col-md-5 border rounded-lg m-2 p-2 d-flex flex-column">
                    <h6 class="text-center">{{ recipetype.name }}</h6>
                        </p>
                        <form action="{{ path('shopplace_edit', {'id': recipetype.id}) }}" method="post" class="ml-3">
                            <button class="btn btn-secondary">📝</button>
                        </form>
                        <form action="{{ path('shopplace_delete', {'id': recipetype.id}) }}" method="post" class="ml-3">
                            <button class="btn btn-secondary">🗑</button>
                        </form>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
